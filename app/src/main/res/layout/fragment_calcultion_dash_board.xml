<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CalcultionDashBoard">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/holo_blue_bright"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="100dp"
                        android:scaleType="center"
                        android:layout_height="100dp"
                        android:src="@drawable/bmisclicon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculate BMI"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="20sp"
                        android:textColor="#fff"

                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/holo_orange_light"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="100dp"
                        android:scaleType="center"
                        android:layout_height="100dp"
                        android:src="@drawable/drinkicon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Remainder"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="20sp"
                        android:textColor="#fff"

                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/medicineCV"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/holo_purple"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="100dp"
                        android:scaleType="center"
                        android:layout_height="100dp"
                        android:src="@drawable/medicineicon"
                        />

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Remainder"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="20sp"
                        android:textColor="#fff"

                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>