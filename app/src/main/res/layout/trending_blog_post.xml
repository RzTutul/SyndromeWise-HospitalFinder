<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="3dp"
    android:padding="5dp"
    android:orientation="vertical">




    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/t_postImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagelogo"
        app:siShape="@drawable/shape_rectangle"
        app:siSquare="true"
        />

    <TextView

        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:id="@+id/t_postTitle"
        android:textSize="13sp"
        android:fontFamily="@font/fontlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Hello" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/t_postText"
        android:maxLines="1"
        android:fontFamily="@font/nikoshlight"
        android:textSize="15sp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello" />

</RelativeLayout>