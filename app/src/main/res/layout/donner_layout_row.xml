<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@android:color/darker_gray"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_person_black_24dp"
            />

        <TextView
            android:id="@+id/d_NameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/d_genderTV"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_NameTV"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Male"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/d_phoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_genderTV"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="0193353253"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView

            android:id="@+id/d_districtTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_phoneTV"
            android:layout_centerHorizontal="true"
            android:fontFamily=""

            android:text="Jessore"
            android:textColor="#000"
            android:textSize="15sp" />


        <Button
            android:id="@+id/phnCallBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="9dp"
            android:background="@drawable/button_shape"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
