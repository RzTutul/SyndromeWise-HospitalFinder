<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="3dp"
        android:elevation="5dp"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:background="@color/colorCardProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rowPescriptionImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/hosiptal_icon" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hospitalnameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ibne Shina" />

                <TextView
                    android:id="@+id/doctorNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Ibne Shina" />
                <TextView
                    android:id="@+id/doctorPhoneTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01924250146"/>

                <TextView
                    android:id="@+id/apoinmentDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/3/19" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>