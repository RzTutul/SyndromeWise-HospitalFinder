<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F6F5FA"/>
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#E7E5EA"
                />
            <gradient
                android:startColor="#D7CAED"
                android:endColor="#D7CAED"
                android:type="linear"
                android:angle="270"
                />
        </shape>
    </item>
</selector>