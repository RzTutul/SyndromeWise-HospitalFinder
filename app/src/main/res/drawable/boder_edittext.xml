<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="60dp" />
            <stroke
                android:width="1dp"
                android:color="#D6E3E9"
                />
            <gradient
                android:startColor="#F0E8E8"
                android:endColor="#EDF1F3"
                android:type="linear"
                android:angle="270"
                />
        </shape>
    </item>
</selector>